<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Bordes grises -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/acvorange" /> <!-- Color de los bordes grises -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Capa 2: Fondo blanco con esquinas redondeadas -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <corners android:radius="20dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</layer-list>
